#include<stdio.h>
int main()
{
 /*calculating average marks*/
 char name[20];
 double mark1,mark2,avg;
 printf("Enter your name: \n",name);
 scanf("%s",&name);
 printf("Mark obtained for 1st subject; \n",mark1);
 scanf("%lf",&mark1);
 printf("Mark obtained for 2nd sub: \n",mark2);
 scanf("%lf",&mark2);
 avg=(mark1+mark2)/2;
 printf("avg=%f",avg);
 return 0;
}
